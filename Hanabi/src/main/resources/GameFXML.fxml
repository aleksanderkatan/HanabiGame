<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<GridPane prefHeight="600.0" prefWidth="800.0" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
          fx:controller="hanabi.HanabiController">
    <GridPane GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER">
        <Label text="Player1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label fx:id="Player1" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label text="Player2" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <Label fx:id="Player2" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <Label text="Player3" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
        <Label fx:id="Player3" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
        <Label text="Player4" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
        <Label fx:id="Player4" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
    </GridPane>
    <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER">
        <Label fx:id="result" GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="500" maxWidth="500"/>
        <Label fx:id="discardPile" GridPane.columnIndex="1" GridPane.rowIndex="0" minWidth="500" maxWidth="500" wrapText="true"/>
    </GridPane>
    <GridPane GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER">
        <Button fx:id="hintButton" text="HINT" GridPane.columnIndex="0" GridPane.rowIndex="0" onAction="#hintButtonClicked"/>
        <Button fx:id="playButton" text="PLAY" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#playButtonClicked"/>
        <Button fx:id="discardButton" text="DISCARD" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#discardButtonClicked"/>
        <Label text="select card number" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="cardChoice" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#cardChosen">
        </ComboBox>
        <ComboBox fx:id="playerChoice" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#playerChosen">
        </ComboBox>
        <Label text="select color to hint" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <ComboBox fx:id="colorChoice" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#colorChosen">
        </ComboBox>
    </GridPane>



</GridPane>